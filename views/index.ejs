<% include header %>

<div class="page">
  <header class="bar bar-nav">
    <h1 class='title'>微信热门文章</h1>
  </header>

<div class="bar bar-header-secondary">
  <div class="searchbar">
    <a class="searchbar-cancel">取消</a>
    <div class="search-input">
      <label class="icon icon-search" for="search"></label>
      <input type="search" id='search' placeholder='输入关键字...'/>
    </div>
  </div>
</div>

<div class="content" id="wrap">
  <div class="list-block media-list" v-for="item in news">
    <ul>
      <li>
        <a v-bind:href="item.url" class="item-link item-content external">
          <div class="item-media"><img v-bind:src="item.picUrl" style='width: 4rem;'></div>
          <div class="item-inner">
            <div class="item-title-row">
              <div class="item-title">{{item.description}}</div>
              <div class="item-after"></div>
            </div>
            <div class="item-subtitle">{{item.ctime}}</div>
            <div class="item-text">{{item.title}}</div>
          </div>
        </a>
      </li>
    </ul>
  </div>
</div>

</page>
<script>
new Vue({
  el: '#wrap',
  data: {
    news:<%- news %>
  }
});
console.log(<%- news %>);
</script>

<% include footer %>
